<form action="/signup" method="POST">
    <div class="form-group">
        <div>
            <label for="signup">Username</label>
            <input type="text" name="username" class="form-control" id="username" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="signup">Password</label>
            <input type="text" name="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="signup">Password Confirmation</label>
            <input type="text" name="passwordConfirmation" class="form-control" id="passwordConfirmation" placeholder="Password Confirmation">
        </div>
        <div class='text-right'>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </div>
</form>